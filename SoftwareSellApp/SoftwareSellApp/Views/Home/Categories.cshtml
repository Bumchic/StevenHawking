@model IEnumerable<SoftwareSellApp.Models.Category>

@{
    ViewBag.Title = "Danh mục sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Danh mục sản phẩm</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title text-center" style="flex-grow: 1;">@item.categoryName</h5>
                        <div class="text-center">
                            <a href="@Url.Action("Category", "Home", new { id = item.categoryId, categoryName = item.categoryName })" class="btn btn-primary">Xem sản phẩm</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }
</style>