@model SoftwareSellApp.Models.Product

@{
    ViewData["Title"] = "ProductView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ProductView</h1>

<div>
    <h4>Product</h4>
    <hr />
    <form asp-action="AddProductToCart" enctype="multipart/form-data" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <dl class="row">
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.productName)
                <input value="@Model.productId"/>
                <input value="@Model.productName" />
                <input value="@Model.images" />
                <input value="@Model.price" />
                <input value="@Model.introduce" />
                <input value="@Model.Category" />
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.productName)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.images)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.images)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.price)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.price)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.introduce)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.introduce)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.categoryName)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.categoryName)
        </dd>
    </dl>
        <input type="submit" value="Add To Cart" class="btn btn-primary" />
    </form>


</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.productId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}